---
// Esta parte de arriba (entre ---) es el "frontmatter"
// Aquí va código JavaScript/TypeScript que se ejecuta en el servidor
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Transforma tu cuerpo con planes de entrenamiento personalizados" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- Aquí va el contenido de cada página -->
    <slot />
    
    <!-- Importamos los estilos globales -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </body>
</html>